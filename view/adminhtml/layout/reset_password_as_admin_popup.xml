<?xml version="1.0"?>
<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <referenceContainer name="content">
        <block class="Sandesh\CustomerPasswordReset\Block\Adminhtml\PasswordResetPopup"
               name="rpa.popup"
               template="Sandesh_CustomerPasswordReset::password-reset-popup.phtml">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="rpa-popup" xsi:type="array">
                            <item name="component" xsi:type="string">Sandesh_CustomerPasswordReset/js/password-reset-popup</item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </block>
    </referenceContainer>
</layout>
